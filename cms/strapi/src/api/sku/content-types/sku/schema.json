{
  "kind": "collectionType",
  "collectionName": "skus",
  "info": {
    "singularName": "sku",
    "pluralName": "skus",
    "displayName": "SKU",
    "description": "Product SKUs for monetization"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "INR",
      "maxLength": 3
    },
    "type": {
      "type": "enumeration",
      "enum": ["quick", "tonight", "day", "week", "month", "topup"],
      "required": true
    },
    "features": {
      "type": "json",
      "required": true
    },
    "minutes": {
      "type": "integer",
      "required": false
    },
    "messages": {
      "type": "integer",
      "required": false
    },
    "images": {
      "type": "integer",
      "required": false
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "isPopular": {
      "type": "boolean",
      "default": false
    },
    "validityDays": {
      "type": "integer",
      "required": false
    }
  }
}
