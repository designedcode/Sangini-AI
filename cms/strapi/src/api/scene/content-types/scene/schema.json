{
  "kind": "collectionType",
  "collectionName": "scenes",
  "info": {
    "singularName": "scene",
    "pluralName": "scenes",
    "displayName": "Scene",
    "description": "Roleplay scenarios and situations"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "required": true
    },
    "opener": {
      "type": "text",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "category": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "sfw": {
      "type": "boolean",
      "default": true
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "model": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::model.model",
      "inversedBy": "scenes"
    },
    "tags": {
      "type": "json",
      "required": false
    }
  }
}
